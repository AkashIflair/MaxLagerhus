        <span id="liveDateTime"></span>
        <span id="liveTemperature">Loading temperature...</span>
    </div>
    <small id="footerContent">
        &copy; @year <a href="@companyWeb">@companyName</a>, All Right Reserved.
    </small>
</footer>

<script>
    function updateDateTime() {
        document.getElementById("liveDateTime").textContent =
            new Date().toLocaleString('en-GB'); // European format: DD/MM/YYYY, HH:MM:SS
    }

   


     async function fetchTemperatureWttr(city = 'Ahmedabad') {
      try {
        const res = await fetch(`https://wttr.in/${encodeURIComponent(city)}?format=j1`);
        const data = await res.json();
        const tempC = data.current_condition[0].temp_C;
        document.getElementById("liveTemperature").textContent = " / Temperature: "+`${tempC}°C`;
      } catch (err) {
        console.error("Failed to fetch weather:", err);
        document.getElementById("liveTemperature").textContent = "Error fetching weather";
      }
    }

    updateDateTime(); // initial call
    fetchTemperatureWttr();
    setInterval(updateDateTime, 1000); // update every second
    setInterval(() => fetchTemperatureWttr(), 60000);
</script>